{
  "name": "aicodereview",
  "displayName": "AI Code Review",
  "version": "0.0.8",
  "publisher": "ConnecticusTechnologies",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aiCodeReview.panel",
    "onCommand:aicodereview.start",
    "onCommand:aicodereview.generateLogs",
    "onCommand:aicodereview.fetchGitHubCiLogs"  ,
    "onCommand:aicodereview.captureBuildLogs"   
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aicodereview.start",
        "title": "AI Code Review: Start Review"
      },
      {
        "command": "aicodereview.generateLogs",
        "title": "AI Code Review: Generate Logs"
      },
      {
      "command": "aicodereview.captureGitLogs",
      "title": "AI Code Review: Capture Git Logs"
       },
       {
        "command": "aicodereview.fetchGitHubCiLogs",  
        "title": "AI Code Review: Fetch GitHub CI Logs"
      },
      {
      "command": "aicodereview.captureBuildLogs",
      "title": "AI Code Review: Capture GitHub Build Logs"  
    }

    ],
    "menus": {
    "commandPalette": [
      {
        "command": "aicodereview.captureGitLogs",
        "when": "workspaceFolderCount > 0",
        "group": "navigation"
      },
      {
          "command": "aicodereview.fetchGitHubCiLogs",  
          "when": "workspaceFolderCount > 0",
          "group": "navigation"
        },
        {
        "command": "aicodereview.captureBuildLogs",
        "when": "workspaceFolderCount > 0",
        "group": "navigation"               
           }
    ]
  },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCodeReview",
          "title": "AI Review",
          "icon": "media/robot.svg"
        }
      ]
    },
    "views": {
      "aiCodeReview": [
        {
          "id": "aiCodeReview.panel",
          "name": "AI Code Review",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "marked": "^17.0.0"
  }
}
